# parseapk
parseapk(){
  aapt dump badging  $1
}

# screenrecord
arecord() {
  if [ $# -eq 0 ]
  then
    name="record.mp4"
  else
    name="$1.mp4"
  fi  
  adb shell screenrecord /sdcard/${name}
  echo "save to /sdcard/${name}"
}

# screencap
acap() {
  target_dir=`pwd`

  if [ $# -eq 0 ]
  then
    name="screenshot.png"
  else
    name="$1.png"
    if [ $# -eq 2 ]
    then
        target_dir=$2
    fi
  fi
  adb shell screencap -p /sdcard/${name}
  adb pull /sdcard/${name} ${target_dir}/${name}
  adb shell rm /sdcard/${name}
  echo "save to $target_dir/${name}"
}
